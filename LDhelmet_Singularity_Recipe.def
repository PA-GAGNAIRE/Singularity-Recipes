Bootstrap: localimage
From: ./Base_LDhelmet.sif


%labels
	ContainerVersion v1.0
	Softwares: msprime, vcftools, vcflib, LDhelmet, R 

%post
	rm -r /RUN_LD/

	apt install -y git
	git clone https://github.com/PA-GAGNAIRE/HotRec.git
	mv ./HotRec/RUN_LD ./
	rm -r ./HotRec/
	mv /RUN_LD /home/

	apt-get install -y autoconf
	apt-get remove -y vcftools
	git clone https://github.com/vcftools/vcftools.git
	cd ./vcftools
	apt-get install -y pkg-config
	./autogen.sh
	./configure
	make
	make install
	
	conda install -y -c bioconda vcflib
	
%environment
	export PERL5LIB=/home/vcftools/src/perl/







